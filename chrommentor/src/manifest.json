{
  "name": "Chrommentor",
  "version": "0.0.0.3",
  "description": "The official chrome extension for Commentor",
  "background": {
    "scripts": ["index.js"],
    "persistent": true
  },
  "options_page": "tagsOptions.html",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["mainScript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["declarativeContent", "activeTab", "storage"],
  "manifest_version": 2
}
